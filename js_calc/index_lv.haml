      %option{:value => "420euro - 3м"}3 m.
      %option{:value => "490euro - 3,5м"}3,5 m.
      %option{:value => "560euro - 4м"}4 m.
      %option{:value => "630euro - 4,5м"}4,5 m.
      %option{:value => "750euro - 5м"}5м
      %option{:value => "900euro+ - 5+м"}5+ m.


  #k_bool_div
    %input#kalitka{:type => "checkbox", :value => "140eruo Калитка"}

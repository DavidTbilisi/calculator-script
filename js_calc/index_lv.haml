      %option{:value => "20euro - 2м"} 2 m.
      %option{:value => "24euro - 2.4м"} 2.4 m.
    %select#zabor1
      %option{:value => "12euro - 1,5м"} 1,5 m.
      %option{:value => "13,5euro - 1,7м"} 1,7 m.
      %option{:value => "15euro - 2м"} 2 m.
    %select#zabor2
      %option{:value => "13euro - 1,5м"} 1,5 m.
      %option{:value => "14,5euro - 1,7м"} 1,7 m.
